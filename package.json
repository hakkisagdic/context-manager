{
  "name": "@hakkisagdic/context-manager",
  "version": "2.0.0",
  "description": "LLM context manager with method-level filtering, token optimization, and GitIngest format support",
  "main": "index.js",
  "bin": {
    "context-manager": "bin/cli.js"
  },
  "scripts": {
    "test": "node test/test.js",
    "test:all": "node test/test-suite.js",
    "test:unit": "node test/unit-tests.js",
    "test:gitingest": "node test/test-gitingest.js",
    "test:gitingest-json": "node test/test-gitingest-json.js",
    "test:presets": "node test/test-presets.js",
    "test:token-budget": "node test/test-token-budget.js",
    "test:comprehensive": "npm run test && npm run test:unit && npm run test:gitingest && npm run test:gitingest-json && npm run test:presets && npm run test:token-budget",
    "analyze": "node bin/cli.js",
    "analyze:methods": "node bin/cli.js --method-level",
    "analyze:gitingest": "node bin/cli.js --gitingest",
    "analyze:preset": "node bin/cli.js --preset llm-explain",
    "build": "echo 'No build step required'",
    "prepublishOnly": "npm test"
  },
  "keywords": [
    "code",
    "analysis",
    "llm",
    "context",
    "method-level",
    "javascript",
    "ast",
    "tiktoken",
    "optimizer"
  ],
  "author": "Hakkı Sağdıç",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "tiktoken": "^1.0.0"
  },
  "devDependencies": {},
  "optionalDependencies": {
    "tiktoken": "^1.0.0"
  },
  "files": [
    "index.js",
    "context-manager.js",
    "lib/",
    "bin/",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hakkisagdic/context-manager.git"
  },
  "bugs": {
    "url": "https://github.com/hakkisagdic/context-manager/issues"
  },
  "homepage": "https://github.com/hakkisagdic/context-manager#readme"
}
