{
  "name": "@hakkisagdic/context-manager",
  "version": "3.0.0",
  "description": "AI Development Platform with plugin architecture, Git integration, REST API, watch mode, LLM optimization, and support for 14+ languages. Features include TOON format (40-50% token reduction), real-time analysis, and comprehensive context generation.",
  "type": "module",
  "main": "index.js",
  "bin": {
    "context-manager": "bin/cli.js"
  },
  "exports": {
    ".": "./index.js"
  },
  "scripts": {
    "test": "node test/test.js",
    "test:all": "node test/run-all-tests.js",
    "test:unit": "node test/unit-tests.js",
    "test:v2.3": "node test/test-v2.3-features.js",
    "test:cli": "node test/test-cli-integration.js",
    "test:toon": "node test/test-toon-format.js",
    "test:gitingest": "node test/test-gitingest.js",
    "test:gitingest-json": "node test/test-gitingest-json.js",
    "test:rust": "node test/test-rust.js",
    "test:ink": "node test/test-ink-ui.js",
    "test:wizard": "node test/test-wizard.js",
    "test:dashboard": "node test/test-dashboard.js",
    "test:llm": "node test/test-llm-detection.js",
    "test:v3": "node test/test-v3-features.js",
    "test:git": "node test/test-git-integration.js",
    "test:plugin": "node test/test-plugin-system.js",
    "test:api": "node test/test-api-server.js",
    "test:watch": "node test/test-watch-mode.js",
    "test:core": "node test/test-core-comprehensive.js",
    "test:lang": "node test/test-language-edge-cases.js",
    "test:formatters": "node test/test-formatters-comprehensive.js",
    "test:error-handler": "node test/test-utils-error-handler.js",
    "test:utils": "node test/test-utils-comprehensive-2.js",
    "test:parsers": "node test/test-parsers-comprehensive.js",
    "test:plugins": "node test/test-plugins-comprehensive.js",
    "test:llm": "node test/test-llm-detector.js",
    "test:comprehensive": "npm run test && npm run test:unit && npm run test:v2.3 && npm run test:cli && npm run test:gitingest && npm run test:llm && npm run test:v3",
    "analyze": "node bin/cli.js",
    "analyze:cli": "node bin/cli.js --cli",
    "analyze:methods": "node bin/cli.js --cli --method-level",
    "analyze:gitingest": "node bin/cli.js --cli --gitingest",
    "serve": "node bin/cli.js serve",
    "watch": "node bin/cli.js watch",
    "github": "node bin/cm-gitingest.js",
    "install:local": "bash scripts/install.sh",
    "uninstall:local": "bash scripts/uninstall.sh",
    "install:windows": "powershell -ExecutionPolicy Bypass -File scripts/install.ps1",
    "uninstall:windows": "powershell -ExecutionPolicy Bypass -File scripts/uninstall.ps1",
    "update:check": "node bin/cm-update.js check",
    "update:install": "node bin/cm-update.js install",
    "update:rollback": "node bin/cm-update.js rollback",
    "update:channel": "node bin/cm-update.js channel",
    "build": "echo 'No build step required'",
    "build:deb": "make build-deb",
    "prepublishOnly": "npm test",
    "postinstall": "node -e \"console.log('\\n✅ Context Manager installed! Run: context-manager --help\\n')\""
  },
  "keywords": [
    "code",
    "analysis",
    "llm",
    "context",
    "plugin-system",
    "git-integration",
    "api-server",
    "watch-mode",
    "method-level",
    "javascript",
    "typescript",
    "rust",
    "csharp",
    "go",
    "java",
    "python",
    "php",
    "ruby",
    "kotlin",
    "swift",
    "cpp",
    "scala",
    "multi-language",
    "ast",
    "tiktoken",
    "optimizer",
    "gitingest",
    "real-time",
    "caching",
    "platform"
  ],
  "author": "Hakkı Sağdıç",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@toon-format/toon": "^0.7.0",
    "ink": "^6.4.0",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^6.0.0",
    "react": "^19.2.0"
  },
  "optionalDependencies": {
    "tiktoken": "^1.0.0"
  },
  "files": [
    "index.js",
    "context-manager.js",
    "lib/",
    "bin/",
    ".context-manager/",
    "examples/",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hakkisagdic/context-manager.git"
  },
  "bugs": {
    "url": "https://github.com/hakkisagdic/context-manager/issues"
  },
  "homepage": "https://github.com/hakkisagdic/context-manager#readme",
  "devDependencies": {
    "c8": "^10.1.3"
  }
}
