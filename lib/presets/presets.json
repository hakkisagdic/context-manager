{
  "default": {
    "name": "Default Analysis",
    "description": "Standard codebase analysis with all features enabled",
    "header": "Codebase Analysis - Generated by Context Manager",
    "filters": {
      "exclude": [],
      "include": []
    },
    "options": {
      "methodLevel": false,
      "gitingest": false,
      "verbose": true,
