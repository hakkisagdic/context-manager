    {
      "id": "security-audit",
      "name": "Security Audit",
      "icon": "üîí",
      "description": "Focus on security-relevant code patterns",
      "filters": {
        "include": [
          "**/*auth*.js",
          "**/*auth*.ts",
          "**/*security*.js",
          "**/*security*.ts",
          "**/*crypto*.js",
          "**/*crypto*.ts",
          "**/*password*.js",
          "**/*password*.ts",
          "**/*token*.js",
          "**/*token*.ts",
          "**/*session*.js",
          "**/*session*.ts",
          "**/middleware/**/*.js",
          "**/middleware/**/*.ts"
        ],
        "methodInclude": [
          "*auth*",
          "*login*",
          "*password*",
          "*token*",
          "*encrypt*",
          "*decrypt*",
          "*hash*",
          "*verify*",
          "*validate*"
