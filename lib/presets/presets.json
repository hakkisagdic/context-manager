          "**/*.md",
          "docs/**"
        ],
        "exclude": [
          "**/*.test.js",
          "**/*.spec.js",
          "**/*.test.ts",
          "**/*.spec.ts",
          "**/*internal*.js",
          "**/*internal*.ts",
          "**/*private*.js",
          "**/*private*.ts"
        ],
        "methodInclude": [
          "!*private*",
