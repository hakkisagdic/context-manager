  "review": {
    "name": "Code Review",
    "description": "Focus on core logic for code review. Excludes tests, docs, and build files",
    "header": "Code Review Digest - Generated by Context Manager",
    "filters": {
      "exclude": [
        "**/*.test.js",
        "**/*.spec.js",
        "**/*.test.ts",
        "**/*.spec.ts",
        "**/test/**",
        "**/tests/**",
        "**/__tests__/**",
        "**/node_modules/**",
        "**/dist/**",
        "**/build/**",
        "**/*.md",
        "**/*.json",
        "**/.git/**"
      ],
      "include": [
        "src/**/*.js",
        "src/**/*.ts",
        "lib/**/*.js",
        "lib/**/*.ts"
      ]
    },
    "options": {
      "methodLevel": true,
      "gitingest": true,
      "verbose": false,
      "saveReport": true,
      "contextExport": false
    },
    "maxTokens": 100000
  },
  "llm-explain": {
    "name": "LLM Explain",
    "description": "Ultra-compact context for LLM consumption. Core files only, method-level extraction",
    "header": "LLM Context - Optimized for AI Assistants",
    "filters": {
      "exclude": [
        "**/*.test.*",
        "**/*.spec.*",
        "**/test/**",
        "**/tests/**",
        "**/__tests__/**",
        "**/docs/**",
        "**/documentation/**",
        "**/*.md",
        "**/*.txt",
        "**/*.json",
        "**/*.yml",
        "**/*.yaml",
        "**/node_modules/**",
        "**/dist/**",
        "**/build/**",
        "**/.git/**",
        "**/coverage/**"
      ],
      "include": [
        "src/**/*.js",
        "src/**/*.ts",
        "lib/**/*.js",
        "lib/**/*.ts",
        "index.js",
        "index.ts"
      ]
    },
    "methodFilters": {
      "exclude": [
        "*test*",
        "*debug*",
        "*mock*",
        "console*",
        "logger*",
        "*Logger",
        "print*"
      ],
      "include": []
    },
    "options": {
      "methodLevel": true,
      "gitingest": true,
      "verbose": false,
      "saveReport": false,
      "contextExport": true,
      "contextToClipboard": true
    },
    "maxTokens": 50000
  },
