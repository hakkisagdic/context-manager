{
  "version": "1.0.0",
  "presets": [
    {
      "id": "default",
      "name": "Default",
      "icon": "‚öôÔ∏è",
      "description": "Standard analysis with balanced settings",
      "filters": {
        "exclude": [
          "node_modules/**",
          "**/*.test.js",
          "**/*.spec.js",
          "**/*.test.ts",
          "**/*.spec.ts",
          "dist/**",
          "build/**",
          "coverage/**",
          "**/*.min.js",
          "**/*.bundle.js"
        ]
      },
      "options": {
        "methodLevel": false,
        "gitingest": false,
        "sortBy": "tokens-desc"
      },
      "metadata": {
        "tags": ["general", "balanced"],
        "bestFor": [
          "General codebase analysis",
          "Initial project exploration",
          "Standard development workflows"
        ]
      }
    },
    {
      "id": "review",
      "name": "Code Review",
      "icon": "üëÄ",
      "description": "Focus on core logic and changed files for code reviews",
      "filters": {
        "exclude": [
          "**/*.test.js",
          "**/*.spec.js",
          "**/*.test.ts",
          "**/*.spec.ts",
          "docs/**",
          "**/*.md",
          "node_modules/**",
          "dist/**",
          "build/**",
          "coverage/**"
        ],
        "include": [
          "src/**/*.js",
          "src/**/*.ts",
          "lib/**/*.js",
          "lib/**/*.ts"
        ]
      },
      "options": {
        "methodLevel": true,
        "gitingest": true,
        "sortBy": "tokens-desc",
        "targetTokens": 100000
      },
      "metadata": {
        "header": "Code Review Digest - Generated by Context Manager",
        "tags": ["review", "pr", "focused"],
        "bestFor": [
          "Pull request reviews",
          "Understanding code changes",
          "Identifying potential issues",
          "Architecture review"
        ]
      }
    },
    {
      "id": "llm-explain",
      "name": "LLM Explain",
      "icon": "üí°",
      "description": "Ultra-compact context optimized for LLM consumption",
      "filters": {
        "exclude": [
          "**/*.test.js",
          "**/*.spec.js",
          "**/*.test.ts",
          "**/*.spec.ts",
          "**/*.md",
          "docs/**",
          "examples/**",
          "node_modules/**",
          "dist/**",
          "build/**"
        ],
        "include": [
          "src/**/*.js",
          "src/**/*.ts",
          "lib/**/*.js",
          "lib/**/*.ts",
          "index.js",
          "index.ts"
        ],
        "methodInclude": [
          "*Handler",
          "*Manager",
          "*Controller",
          "*Service",
          "*Validator"
        ]
      },
      "options": {
        "methodLevel": true,
        "gitingest": true,
        "sortBy": "importance",
        "targetTokens": 50000,
        "fitStrategy": "methods-only"
      },
      "metadata": {
        "tags": ["llm", "compact", "optimized"],
        "bestFor": [
          "Explaining code to AI assistants",
          "Generating documentation",
          "Understanding architecture",
          "Quick code summaries"
        ]
      }
    },
    {
      "id": "pair-program",
      "name": "Pair Programming",
      "icon": "üë•",
